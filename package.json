{
  "name": "wirelesskfb",
  "version": "1.0.5",
  "description": "Wireless KFB Project",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "author": {
    "name": "Nagy Viktor",
    "email": "vnagy.kssk@kroschu.com"
  },
  "license": "MIT",
  "keywords": [
    "nextjs",
    "electron",
    "typescript"
  ],
  "scripts": {
    "redis:up": "bash ./scripts/redis-up-local.sh",
    "redis:wait": "npx wait-on tcp:127.0.0.1:6379",
    "predev": "if [ \"$SKIP_REDIS_BOOTSTRAP\" = \"1\" ]; then echo skip; else npm run redis:up && npm run redis:wait; fi",
    "dev:electron:watch": "tsc -p tsconfig.electron.json -w",
    "dev": "concurrently -k -n \"NEXT,E-MAIN,ELECTRON\" -c \"yellow,green,blue\" \"PORT=3000 next dev\" \"npm:dev:electron:watch\" \"bash -lc 'npx wait-on http://localhost:3000 || npx wait-on http://localhost:3001; electron .'\"",
    "dev:all": "npm run predev && npm run dev",
    "redis:logs": "journalctl -u redis-server -f --no-pager || redis-cli MONITOR",
    "locks:redis": "node scripts/print-locks-redis.mjs",
    "build:renderer": "next build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:server && npm run build:electron && npx electron-builder --linux AppImage",
    "build:arm64": "npm run build:renderer && npm run build:server && npm run build:electron && npx electron-builder --linux AppImage --arm64",
    "start": "npx electron .",
    "type-check": "echo 'Skipping type-check (temporarily disabled)'",
    "type-check:app": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier . --write",
    "test:ui": "vitest run",
    "postinstall": "npx electron-builder install-app-deps",
    "logs:monitor": "LOG_MONITOR_ONLY=1 LOG_MONITOR_START_ONLY=1 LOG_LEVEL=info next dev",
    "logs:full": "LOG_MONITOR_ONLY=0 LOG_LEVEL=debug next dev",
    "locks": "node scripts/print-locks-redis.mjs",
    "locks:deleteall": "node scripts/clear-all-locks.mjs",
    "locks:delete": "node scripts/clear-locks-by-mac.mjs",
    "locks:delete:08:3A:8D:15:27:54": "node scripts/clear-locks-by-mac.mjs 08:3A:8D:15:27:54",
    "locks:station": "STATION_ID=$npm_config_id node scripts/print-locks-redis.mjs",
    "locks:watch": "node scripts/print-locks-redis.mjs --watch --clear",
    "locks:station:watch": "STATION_ID=$npm_config_id node scripts/print-locks-redis.mjs --watch --clear"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@serialport/parser-readline": "^13.0.0",
    "@xmldom/xmldom": "^0.8.11",
    "framer-motion": "^12.23.12",
    "ioredis": "^5.7.0",
    "next": "^15.5.2",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serialport": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "3.25.42"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.2",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "9.27.0",
    "eslint-config-next": "^15.5.2",
    "husky": "9.1.7",
    "jsdom": "^27.0.0",
    "msw": "^2.6.8",
    "postcss": "^8.4.38",
    "prettier": "3.5.3",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1",
    "wait-on": "^8.0.3",
    "whatwg-fetch": "^3.6.20"
  },
  "build": {
    "appId": "com.nagyv.typescriptnextjsstarter",
    "productName": "Wireless KFB",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      ".next/**/*",
      "public/**/*",
      "src/**/*",
      "dist/main/**/*",
      "dist-server/**/*",
      ".env.production",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      {
        "from": "assets/icon.png",
        "to": "assets/icon.png"
      },
      {
        "from": "dist-server",
        "to": "dist-server"
      },
      {
        "from": ".next/standalone/node_modules",
        "to": "node_modules"
      },
      {
        "from": "node_modules",
        "to": "node_modules"
      }
    ],
    "linux": {
      "icon": "public/tinder.png",
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "packageManager": "yarn@4.4.0+sha512.91d93b445d9284e7ed52931369bc89a663414e5582d00eea45c67ddc459a2582919eece27c412d6ffd1bd0793ff35399381cb229326b961798ce4f4cc60ddfdb"
}
